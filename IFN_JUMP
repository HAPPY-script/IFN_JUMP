local IFNJumpScreen = Instance.new("ScreenGui")
IFNJumpScreen.Name = "IFNJumpScreen"
IFNJumpScreen.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
IFNJumpScreen.ResetOnSpawn = false
IFNJumpScreen.DisplayOrder = 5
IFNJumpScreen.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

local Main = Instance.new("Frame")
Main.Name = "Main"
Main.Position = UDim2.new(0.5, 0, 0.5, 0)
Main.Size = UDim2.new(0.15, 0, 0.15, 0)
Main.BackgroundColor3 = Color3.new(0.180392, 0, 0.454902)
Main.BackgroundTransparency = 0.25
Main.BorderSizePixel = 0
Main.BorderColor3 = Color3.new(0, 0, 0)
Main.ZIndex = 5
Main.AnchorPoint = Vector2.new(0.5, 0.5)
Main.Transparency = 0.25
Main.Parent = IFNJumpScreen

local UIAspectRatioConstraint = Instance.new("UIAspectRatioConstraint")
UIAspectRatioConstraint.Name = "UIAspectRatioConstraint"

UIAspectRatioConstraint.Parent = Main

local UIStroke = Instance.new("UIStroke")
UIStroke.Name = "UIStroke"
UIStroke.Thickness = 3
UIStroke.Parent = Main

local ImageButton = Instance.new("ImageButton")
ImageButton.Name = "ImageButton"
ImageButton.Position = UDim2.new(0.5, 0, 0.5, 0)
ImageButton.Size = UDim2.new(0.6, 0, 0.6, 0)
ImageButton.BackgroundColor3 = Color3.new(1, 1, 1)
ImageButton.BorderSizePixel = 0
ImageButton.BorderColor3 = Color3.new(0, 0, 0)
ImageButton.AnchorPoint = Vector2.new(0.5, 0.5)
ImageButton.Image = "rbxassetid://81797383072219"
ImageButton.ImageColor3 = Color3.new(0, 0, 0)
ImageButton.Parent = Main

local UICorner = Instance.new("UICorner")
UICorner.Name = "UICorner"
UICorner.CornerRadius = UDim.new(1, 0)
UICorner.Parent = ImageButton

local UIStroke2 = Instance.new("UIStroke")
UIStroke2.Name = "UIStroke"
UIStroke2.Color = Color3.new(0.588235, 0, 1)
UIStroke2.Thickness = 2
UIStroke2.Parent = ImageButton

local UIDragDetector = Instance.new("UIDragDetector")
UIDragDetector.Name = "UIDragDetector"

UIDragDetector.Parent = Main

-- Services ------------------------------------------------------------------------------------------
local Players = game:GetService("Players")
local UIS = game:GetService("UserInputService")

local player = Players.LocalPlayer
local gui = player:WaitForChild("PlayerGui"):WaitForChild("IFNJumpScreen")
local button = gui:WaitForChild("Main"):WaitForChild("ImageButton")

-- State
local enabled = false
local jumpConn

-- Colors
local OFF_BG = Color3.fromRGB(20, 20, 20)
local OFF_IMG = Color3.fromRGB(255, 255, 255)
local ON_BG  = Color3.fromRGB(255, 255, 255)
local ON_IMG = Color3.fromRGB(0, 0, 0)

-- Apply OFF by default
button.BackgroundColor3 = OFF_BG
button.ImageColor3 = OFF_IMG

-- Infinite Jump logic
jumpConn = UIS.JumpRequest:Connect(function()
	if enabled then
		local char = player.Character
		local hum = char and char:FindFirstChildOfClass("Humanoid")
		if hum then
			hum:ChangeState(Enum.HumanoidStateType.Jumping)
		end
	end
end)

-- Toggle button
button.MouseButton1Click:Connect(function()
	enabled = not enabled

	if enabled then
		button.BackgroundColor3 = ON_BG
		button.ImageColor3 = ON_IMG
	else
		button.BackgroundColor3 = OFF_BG
		button.ImageColor3 = OFF_IMG
	end
end)
